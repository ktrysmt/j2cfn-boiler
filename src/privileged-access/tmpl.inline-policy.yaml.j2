PowerUserAccess:
  Type: AWS::IAM::Policy
  Properties:
    PolicyName: PowerUserAccess
    Roles: 
      - !Ref 'SampleAdministrator'
    PolicyDocument:
      Statement: 
        - Effect: 'Allow'
          NotAction:
            - 'iam:*'
            - 'organizations:*'
          Resource: '*'
        - Effect: 'Allow'
          Action:
            - 'iam:CreateServiceLinkedRole'
            - 'iam:DeleteServiceLinkedRole'
            - 'iam:ListRoles'
            - 'organizations:DescribeOrganization'
          Resource: '*'

IAMFullAccess:
  Type: AWS::IAM::Policy
  Properties:
    PolicyName:  IAMFullAccess
    Roles: 
      - !Ref 'SampleAdministrator'
    PolicyDocument:
      Statement:
        - Effect: 'Allow'
          Action:
            - 'iam:*'
          Resource: '*'

